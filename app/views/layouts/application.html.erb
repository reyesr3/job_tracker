<!DOCTYPE html>
<html>
<head>
  <title>RsgTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container'>
	<nav class='navbar navbar-light' style='background-color: #799AAE;'>
		<div class='navbar-header'>
			<button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar'>
			</button>
			<a class='navbar-brand' href='#' style='color: #062E43;'>RSG Tracker</a>
		</div>
		<div id='navbar' class='navbar-collapse collapse' aria-expanded='false' style='height: 1px;'>
			<ul class='nav navbar-nav'>
				<% if current_user.present? %>
					<li><%= link_to "Log Out", destroy_user_session_path, style: 'color:#062E43;', method: :delete %></li>
				<% end %>
			</ul>
		</div>
	</nav>

	<% if notice.present? %>
		<div class='alert alert-info'>
			<%= notice %>
		</div>
	<% end %>
	<% if alert.present? %>
		<div class='alert alert-danger'>
			<%= alert %>
		</div>
	<% end %>

<%= yield %>

</body>
</html>
